{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "compact": {
      "env": [
        "COMPACT_HOME"
      ],
      "inputs": [
        "src/**/*.compact"
      ],
      "outputLogs": "new-only",
      "outputs": [
        "src/artifacts/**"
       ]
    },
    "compact:fast": {
      "env": [
        "COMPACT_HOME",
        "SKIP_ZK"
      ],
      "inputs": [
        "src/**/*.compact"
      ],
      "outputLogs": "new-only",
      "outputs": [
        "src/artifacts/**"
      ]
    },
    "test": {
      "dependsOn": [
        "compact:fast",
        "^compact:fast"
      ],
      "env": [
        "COMPACT_HOME"
      ],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "COMPACT_HOME"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!src/**/*.test.ts",
        "!tests/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        ".env"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:fast": {
      "dependsOn": [
        "^build:fast"
      ],
      "env": [
        "COMPACT_HOME",
        "SKIP_ZK"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "!src/**/*.test.ts",
        "!tests/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        ".env"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "types": {
      "dependsOn": [
        "compact:fast",
        "^compact:fast",
        "^build:fast"
      ],
      "cache": false
    },
    "precommit": {
      "dependsOn": [
        "types",
        "^types"
      ],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "lint:ci": {
      "cache": false
    }
  }
}