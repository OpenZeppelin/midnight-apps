{
  "name": "@openzeppelin/midnight-apps",
  "version": "1.0.0",
  "private": true,
  "description": "Experimental sample projects on top of Midnight using Compact",
  "main": "index.js",
  "scripts": {
    "prepare": "is-ci || husky && pnpm --filter @openzeppelin/midnight-apps-logger run build && pnpm --filter @openzeppelin/midnight-apps-compact run build",
    "compact": "turbo run compact",
    "compact:fast": "turbo run compact:fast",
    "compact:fmt": "turbo run compact:fmt",
    "compact:fmt:fix": "turbo run compact:fmt:fix",
    "build": "turbo run build",
    "build:contracts": "turbo run build --filter './contracts/*'",
    "build:fast": "turbo run build:fast",
    "build:apps": "turbo run build --filter './apps/*'",
    "build:packages": "turbo run build --filter './packages/*'",
    "test": "turbo run test",
    "test:contracts": "turbo run test --filter './contracts/*'",
    "test:apps": "turbo run test --filter './apps/*'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:ci": "turbo run lint:ci",
    "types": "turbo run types",
    "types:apps": "turbo run types --filter './apps/*'",
    "types:contracts": "turbo run types --filter './contracts/*'",
    "types:packages": "turbo run types --filter './packages/*'",
    "precommit": "turbo run precommit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@midnight-ntwrk/compact-runtime": "^0.9.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^3.1.4",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.2",
    "tailwindcss": "^4.0.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.6.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  },
  "engines": {
    "node": "22.x"
  },
  "engineStrict": true
}
