{
  "name": "midnight-dapps",
  "version": "1.0.0",
  "private": true,
  "description": "Experimental sample projects on top of Midnight using Compact",
  "main": "index.js",
  "scripts": {
    "prepare": "is-ci || husky",
    "compact": "for d in ./contracts/*; do if [ -d \"$d\" ]; then cd \"$d\" && pnpm compact && cd - > /dev/null; fi; done",
    "compact:fast": "turbo run compact -- --skip-zk",
    "compact:version": "turbo run compact -- --version",
    "compact:language-version": "turbo run compact -- --language-version",
    "build:contracts": "for d in ./contracts/*; do if [ -d \"$d\" ]; then cd \"$d\" && pnpm build && cd - > /dev/null; fi; done",
    "build:apps": "turbo run build --filter './apps/*'",
    "test:contracts": "turbo run test --filter './contracts/*'",
    "test:apps": "turbo run test --filter './apps/*'",
    "fmt": "turbo run fmt",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "types": "pnpm compact:fast && turbo run types",
    "precommit": "turbo run precommit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@midnight-ntwrk/compact-runtime": "^0.8.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.1.4",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.2",
    "tailwindcss": "^4.0.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  },
  "engines": {
    "node": "22.x"
  },
  "engineStrict": true
}
