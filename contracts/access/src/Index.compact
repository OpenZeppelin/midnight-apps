pragma language_version >= 0.14.0;

/**
 * @module Index
 * @description Re-exports ledger-related types and state from AccessControl.compact for use in contracts and TypeScript.
 * @remarks This file provides a centralized export of AccessControl's public ledger state, 
 * making it accessible for TypeScript type generation via compactc. So no need to export them in a Mock*.compact.
 */

import AccessControl prefix AccessControl_;

import "./interfaces/IAccessControl";

/**
 * @description Exports public ledger state and types from AccessControl for contract and TypeScript integration.
 */
export { 
    Role,       // Enum defining user roles (Admin, Lp, Trader, None)
    roleCommits, // Merkle tree storing role commitments
    isInitialized, // Boolean indicating contract initialization
    index       // Counter for the next Merkle tree index
};
