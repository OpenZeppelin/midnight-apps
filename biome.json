{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/CHANGELOG.md",
      "!**/pnpm-lock.yaml",
      "!**/tsconfig.base.json",
      "!**/tsconfig*.json",
      "!**/*.compact",
      "!**/artifacts/**/*",
      "!**/coverage/**/*",
      "!**/dist/**/*",
      "!**/reports/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error",
        "noUnusedImports": "error"
      },
      "performance": {
        "noBarrelFile": "error",
        "noReExportAll": "error",
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["log"]
          }
        },
        "noExplicitAny": "off",
        "noUnknownAtRules": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
